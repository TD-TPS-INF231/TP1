#include <stdio.h>

#define MAX 10  // Taille maximale des matrices

int main() {
    int A[MAX][MAX], B[MAX][MAX], C[MAX][MAX];
    int lignesA, colonnesA, lignesB, colonnesB;

    // Saisie des dimensions
    printf("Entrez le nombre de lignes de la matrice A: ");
    scanf("%d", &lignesA);
    printf("Entrez le nombre de colonnes de la matrice A: ");
    scanf("%d", &colonnesA);

    printf("Entrez le nombre de lignes de la matrice B: ");
    scanf("%d", &lignesB);
    printf("Entrez le nombre de colonnes de la matrice B: ");
    scanf("%d", &colonnesB);

    // Vérification de la compatibilité
    if (colonnesA!= lignesB) {
        printf("Erreur: le produit matriciel n'est pas défini (colonnesA ≠ lignesB).\n");
        return 1;
}

    // Saisie des éléments de la matrice A
    printf("Entrez les éléments de la matrice A:\n");
    for (int i = 0; i < lignesA; i++) {
        for (int j = 0; j < colonnesA; j++) {
            scanf("%d", &A[i][j]);
}
}

    // Saisie des éléments de la matrice B
    printf("Entrez les éléments de la matrice B:\n");
    for (int i = 0; i < lignesB; i++) {
        for (int j = 0; j < colonnesB; j++) {
            scanf("%d", &B[i][j]);
}
}

    // Initialisation de la matrice C
    for (int i = 0; i < lignesA; i++) {
        for (int j = 0; j < colonnesB; j++) {
            C[i][j] = 0;
}
}

    // Calcul du produit matriciel C = A × B
    for (int i = 0; i < lignesA; i++) {
        for (int j = 0; j < colonnesB; j++) {
            for (int k = 0; k < colonnesA; k++) {
                C[i][j] += A[i][k] * B[k][j];
}
}
}

    // Affichage du résultat
    printf("Résultat du produit matriciel (A × B):\n");
    for (int i = 0; i < lignesA; i++) {
        for (int j = 0; j < colonnesB; j++) {
            printf("%d ", C[i][j]);
}
        printf("\n");
}

    return 0;
}


